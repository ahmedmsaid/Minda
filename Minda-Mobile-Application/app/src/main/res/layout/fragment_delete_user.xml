<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white"
       tools:context=".ui.admin.delete.DeleteUserFragment">

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_centerInParent="true">


         <ImageView
             android:id="@+id/logoDeleteScreen"
             android:layout_width="@dimen/_150sdp"
             android:layout_height="@dimen/_150sdp"
             android:layout_marginTop="@dimen/_16sdp"
             android:src="@drawable/minda"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toTopOf="parent" />

         <TextView
             android:id="@+id/textView13del"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Choose the student name"
             android:textColor="@color/veryDarkGray"
             android:textSize="@dimen/_16ssp"
             android:textStyle="bold"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"

             app:layout_constraintTop_toBottomOf="@+id/logoDeleteScreen"
             tools:ignore="HardcodedText" />

         <Spinner
             android:id="@+id/namesSpinnerForDelete"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="@dimen/_16sdp"
             android:layout_marginEnd="@dimen/_16sdp"
             android:minHeight="48dp"
             app:layout_constraintTop_toBottomOf="@+id/textView13del"
             tools:layout_editor_absoluteX="13dp" />


         <Button
             android:id="@+id/deleteUserBtn"
             android:layout_width="@dimen/_140sdp"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_32sdp"
             android:background="@color/primary_dark_orange"
             android:text="Delete"
             android:textAllCaps="false"
             android:textColor="@color/white"
             android:textSize="@dimen/_14ssp"
             android:textStyle="bold"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/namesSpinnerForDelete"
             tools:ignore="HardcodedText,TextContrastCheck" />

      </androidx.constraintlayout.widget.ConstraintLayout>

   </RelativeLayout>
</layout>