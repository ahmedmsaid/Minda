                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textColor="@color/primary_dark_orange"
                    android:textSize="@dimen/_16ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/quizNoEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@drawable/search_field_background"
                    android:hint="Quiz name."
                    android:inputType="text"
                    android:padding="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/quizQuestionNumberEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/search_field_background"
                    android:hint="Q. count"
                    android:inputType="number"
                    android:padding="12dp"
                    app:layout_constraintEnd_toEndOf="@+id/quizNoEt"
                    app:layout_constraintStart_toStartOf="@+id/quizNoEt"
                    app:layout_constraintTop_toBottomOf="@+id/quizNoEt"
                    tools:ignore="Autofill" />

                <EditText
                    android:id="@+id/eachQuestionMarkEt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/search_field_background"
                    android:hint="Q. mark"
                    android:inputType="number"
                    android:padding="12dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:layout_constraintEnd_toEndOf="@+id/quizQuestionNumberEt"
                    app:layout_constraintStart_toStartOf="@+id/quizQuestionNumberEt"
                    app:layout_constraintTop_toBottomOf="@+id/quizQuestionNumberEt"
                    tools:ignore="Autofill" />

                <CheckBox
                    android:id="@+id/applyTimingCBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:minHeight="48dp"
                    android:text="Apply timing"
                    android:textColor="@color/veryDarkGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
